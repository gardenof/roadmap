= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@Project.errors.count, "error")} prohibited this Project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    -if params[:name]
    = f.label :name
    = f.text_field :name, :value => params[:name]
    -else
      = f.label :name
      = f.text_field :name
  .field
    -if params[:tracker_project_id]
    = f.label :tracker_project_id
    = f.text_field :tracker_project_id, :value => params[:tracker_project_id]
    -else 
      = f.label :tracker_project_id
      = f.text_field :tracker_project_id
  .actions
    = f.submit 'Save'