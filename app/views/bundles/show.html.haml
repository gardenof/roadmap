%div#notice= notice

%div.bundle-header
  %header
    #{@bundle.name}
    %span.desc
      #{@bundle.class}
    .action-links
      = link_to 'Edit', edit_project_bundle_path(@project,@bundle)
      \|
      = link_to 'Back', project_bundles_path(@project)


%div.bundle-details
  - if @attached_features.any?
    .features-attached
      %header #{@bundle.name.capitalize}
      %header #{@bundle.estimates_total} points, #{@bundle.unestimated_count} unestimated
      = form_tag schedule_project_bundle_path(@project, @bundle) do |f|
        = submit_tag 'Send Bundle to Tracker', confirm: "This action will create in Tracker any features that have not yet been created in Tracker. Features preivoisly sent to Tracker will not be modified."

      %ul
        - @attached_features.each do |feature|
          %li.clear
            = link_to feature.name, [@project, feature]
            = form_tag remove_feature_project_bundle_path(@project,@bundle) do |f|
              = hidden_field_tag :feature_id, feature.id
              = submit_tag '-'
  - if @available_features.any?
    .features-available
      %header Available Features
      %ul
        - @available_features.each do |feature|
          %li.clear
            = link_to feature.name, [@project, feature]
            = form_tag add_feature_project_bundle_path(@project,@bundle) do |f|
              = hidden_field_tag :feature_id, feature.id
              = submit_tag '+'
