= form_for feature, url: update_bundle_feature_project_bundle_url  do |f|
  -if feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - feature.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_area :description
  .field
    = f.hidden_field :id, :value => feature.id
  .floatButton
    = f.submit 'Save Changes'
.floatButton
  = render partial: 'bundles/remove_feature_button', locals: {feature: feature}
  = button_to 'Delete Feature', project_feature_path(@project,feature.to_param), :confirm => 'Are you sure?', :method => :delete