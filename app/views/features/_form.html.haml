= form_for @feature do |f|
  -if @feature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feature.errors.count, "error")} prohibited this feature from being saved:"
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :estimate
    = f.text_field :estimate
  .field
    = f.label :tracker_project_id
    = f.text_field :tracker_project_id
  .field
    = f.label :current_state
    = f.text_field :current_state
  .field
    = f.label :tracker_id
    = f.text_field :tracker_id
  .actions
    = f.submit 'Save'