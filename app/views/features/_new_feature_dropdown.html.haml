= form_tag(create_bundle_feature_project_bundle_path(@project,@bundle), method: :post) do
  .field
    = label_tag "Name"
    %br
    = text_field_tag 'feature[name]', nil
  .field
    = label_tag "tags"
    %br
    = text_field_tag 'feature[labels]', nil, size: 3
  .field
    = label_tag "description"
    %br
    = text_area_tag 'feature[description]', nil, :size => "45x10"
  .field
    = submit_tag 'Save'
